<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_margin_top_small"
            android:layout_marginLeft="@dimen/app_left_margin"
            android:layout_marginRight="@dimen/app_right_margin"
            android:layout_marginEnd="@dimen/app_right_margin"
            android:layout_marginStart="@dimen/app_left_margin"
            android:textSize="@dimen/app_text_size_small"
            android:textColor="#6D7986"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_left_margin"
            android:layout_marginRight="@dimen/app_right_margin"
            android:layout_marginEnd="@dimen/app_right_margin"
            android:layout_marginStart="@dimen/app_left_margin"
            android:layout_marginBottom="@dimen/app_margin_bottom_small"
            android:textSize="@dimen/app_text_size_medium"
            android:textColor="@color/colorTextPrimary"/>
    </LinearLayout>
</LinearLayout>