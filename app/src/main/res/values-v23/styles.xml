<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <!-- Цвет текста системных элементов, используется для Popup Menu -->
        <item name="android:textColor">@android:color/black</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="queryHint">@string/search</item>
        <item name="queryBackground">@drawable/abc_textfield_search_material</item>
        <item name="closeIcon">@drawable/ic_clear</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="android:maxWidth">1000dp</item>
    </style>
</resources>